{% extends 'base.html.twig' %}

{% block body %}
    <h1>Plat</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ plat.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ plat.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ plat.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ plat.prix }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ plat.statut }}</td>
            </tr>
            <tr>
                <th>Flag</th>
                <td>{{ plat.flag }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ plat.auteur }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('plat_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
